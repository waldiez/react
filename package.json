{
    "name": "@waldiez/react",
    "license": "MIT",
    "version": "0.1.18",
    "type": "module",
    "main": "./dist/@waldiez.umd.cjs",
    "module": "./dist/@waldiez.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/@waldiez.js",
            "require": "./dist/@waldiez.js"
        },
        "./dist/*.css": "./dist/*.css",
        "./dist/*.svg": "./dist/*.svg"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/waldiez/react.git"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "yarn monaco && vite",
        "check-types": "tsc --noEmit",
        "monaco": "node --import=tsx scripts/monaco.ts",
        "build": "yarn build:lib && yarn build:web",
        "build:lib": "tsc -b && vite build",
        "build:web": "tsc -b && vite build --config vite.web.config.ts",
        "build:site": "yarn monaco && yarn build:web && mv public/vs out/static/vs && mv public/min-maps out/static/min-maps",
        "docs": "typedoc --out out/docs --tsconfig tsconfig.json",
        "preview": "vite preview",
        "format": "yarn prettier && yarn stylelint && yarn eslint",
        "lint": "yarn prettier:check && yarn stylelint:check && yarn eslint:check",
        "forlint": "yarn format && yarn lint",
        "eslint": "yarn eslint:check --fix",
        "eslint:check": "eslint --report-unused-disable-directives --max-warnings 0 --cache src tests",
        "prettier": "prettier \"**/*{.ts,.tsx,.js,.mjs,.css,.json,.md}\" --write --list-different",
        "prettier:check": "prettier \"src/**/*{.ts,.tsx,.js,.mjs,.css,.json,.md}\" --check",
        "stylelint": "yarn stylelint:check --fix --ignore-path .gitignore",
        "stylelint:check": "stylelint --ignore-path .gitignore --cache **/*.css",
        "mkdir": "node --import=tsx scripts/mkdir.ts --path ./out/lib --parents",
        "prepack": "yarn mkdir",
        "archive": "yarn pack --out ./out/lib/waldiez-react-%v.tgz",
        "clean:lintcache": "rimraf .eslintcache .stylelintcache",
        "clean:lib": "rimraf dist",
        "clean:out": "rimraf out",
        "clean:coverage": "rimraf coverage",
        "clean:tsbuild": "rimraf tsconfig.app.tsbuildinfo tsconfig.node.tsbuildinfo tsconfig.build.tsbuildinfo",
        "clean": "yarn clean:lintcache && yarn clean:lib && yarn clean:coverage && yarn clean:out && yarn clean:tsbuild",
        "schema": "node --import=tsx scripts/schema.ts && prettier schema.json --write",
        "pretest": "yarn monaco && rimraf tests/browser/videos",
        "posttest": "node --import=tsx scripts/video.ts",
        "test:components": "yarn monaco && vitest run",
        "test:snapshots": "yarn pretest && vitest run --browser.enabled --browser.headless tests/browser/** --update && yarn posttest",
        "test:ui": "yarn monaco && vitest --ui",
        "test:coverage": "yarn monaco && vitest run --coverage",
        "test:browser": "yarn pretest && vitest run --browser.enabled --browser.headless tests/browser/** && yarn posttest",
        "test:all": "yarn test:browser && yarn test:coverage",
        "changelog": "node --import=tsx scripts/changelog.ts",
        "all": "yarn clean && yarn forlint && yarn schema && yarn test:all && yarn build && yarn archive && yarn docs"
    },
    "pre-commit": [
        "format",
        "lint"
    ],
    "dependencies": {
        "@monaco-editor/react": "^4.6.0",
        "@xyflow/react": "^12.3.5",
        "microdiff": "^1.4.0",
        "nanoid": "^5.0.9",
        "rc-slider": "^11.1.7",
        "react-error-boundary": "^4.1.2",
        "react-hotkeys-hook": "^4.6.1",
        "react-icons": "^5.4.0",
        "react-select": "^5.8.3",
        "zundo": "^2.3.0",
        "zustand": "^5.0.2"
    },
    "peerDependencies": {
        "react": "^18.3.1 || ^19.0.0",
        "react-dom": "^18.3.1 || ^19.0.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.4",
        "@eslint/js": "9.16.0",
        "@stylistic/eslint-plugin": "^2.12.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@trivago/prettier-plugin-sort-imports": "^5.2.0",
        "@types/eslint__js": "^8.42.3",
        "@types/fs-extra": "^11.0.4",
        "@types/gunzip-maybe": "^1.4.2",
        "@types/jest": "^29.5.14",
        "@types/jest-image-snapshot": "^6.4.0",
        "@types/react": "^18.3.13 || ^19.0.1",
        "@types/react-dom": "^18.3.1 || ^19.0.1",
        "@types/tar-stream": "^3.1.3",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/browser": "^2.1.8",
        "@vitest/coverage-v8": "^2.1.8",
        "@vitest/ui": "^2.1.8",
        "ajv": "^8.17.1",
        "dotenv": "^16.4.7",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react-refresh": "^0.4.16",
        "eslint-plugin-tsdoc": "^0.4.0",
        "fs-extra": "^11.2.0",
        "gunzip-maybe": "^1.4.2",
        "jsdom": "^25.0.1",
        "lookpath": "^1.2.2",
        "playwright": "^1.49.0",
        "pre-commit": "^1.2.2",
        "prettier": "^3.4.2",
        "react": "^18.3.1 || ^19.0.0",
        "react-dom": "^18.3.1 || ^19.0.0",
        "react-select-event": "^5.5.1",
        "rimraf": "^6.0.1",
        "stylelint": "^16.11.0",
        "stylelint-config-recommended": "^14.0.1",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-prettier": "^5.0.2",
        "tar-stream": "^3.1.7",
        "terser": "^5.37.0",
        "ts-json-schema-generator": "^2.3.0",
        "tsx": "^4.19.2",
        "typedoc": "^0.27.4",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.17.0",
        "vite": "^6.0.3",
        "vite-plugin-dts": "^4.3.0",
        "vite-plugin-externalize-deps": "^0.8.0",
        "vitest": "^2.1.8",
        "vitest-browser-react": "^0.0.4"
    },
    "prettier": {
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 110,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "endOfLine": "auto",
        "overrides": [
            {
                "files": "package.json",
                "options": {
                    "tabWidth": 4
                }
            }
        ],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "importOrder": [
            "^@fortawesome/",
            "^@xyflow/",
            "^react",
            "^react-dom",
            "^react-select",
            "^zustand",
            "^nanoid",
            "^rc-slider",
            "^@monaco-editor/react",
            "^@waldiez/"
        ]
    },
    "packageManager": "yarn@4.5.3",
    "publishConfig": {
        "access": "public"
    }
}
