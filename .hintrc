{
  "extends": [
    "development",
    "web-recommended"
  ],
  "hints": {
    "no-inline-styles": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "text-wrap",
          "scrollbar-width",
          "scrollbar-width: thin",
          "scrollbar-color",
          "user-select",
          "-webkit-overflow-scrolling",
          "scrollbar-width: none"
        ]
      }
    ],
    "html-checker": "off",
    "content-type": "off",
    "meta-charset-utf-8": "off"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not chrome <= 109",
    "not firefox <= 115",
    "not ios_saf <= 16.7"
  ]
}