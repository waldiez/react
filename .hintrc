{
  "extends": [
    "development"
  ],
  "hints": {
    "no-inline-styles": "off",
    "manifest-is-valid": "off",
    "vendor-prefixes": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "scrollbar-width",
          "scrollbar-width: thin",
          "width: stretch"
        ]
      }
    ],
    "detect-css-reflows/composite": "off",
    "detect-css-reflows/paint": "off"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not chrome <= 109",
    "not ios_saf <= 16.7",
    "not ios_saf <= 18.2",
    "not safari <= 18.2",
    "not samsung <= 27"
  ]
}